@model CampusBookFlip.WebUI.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}
@using PoliteCaptcha
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Associate your @ViewBag.ProviderDisplayName account.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>.
        Please enter a user name for this site below and click the Confirm button to finish
        logging in.
    </p>
    <div class="input-group form-group">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeHolder = "User name" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="input-group form-group">
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeHolder = "First name" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="input-group form-group">
        @Html.TextBoxFor(mbox => mbox.LastName, new { @class = "form-control", placeHolder = "Last name" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="input-group form-group">
        @Html.TextBoxFor(mbox => mbox.EmailAddress, new { @class = "form-control", placeHolder = "Email address" })
        @Html.ValidationMessageFor(m => m.EmailAddress)
    </div>

    
    @Html.SpamPreventionFields()
    @Html.HiddenFor(m => m.ExternalLoginData)
    <input class="btn btn-primary" type="submit" value="Register" />
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Html.SpamPreventionScript()
}
