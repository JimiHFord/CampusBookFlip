@model CampusBookFlip.WebUI.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
@using TwitterBootstrap3
@using PoliteCaptcha

<div class="container">
<div class="row">
    <div class="col-md-3">
        <h1>@ViewBag.Title.</h1>
        <h2>Create a new account.</h2>
    </div>
</div></div>
<div class="container"><div class="row">
    <div class="col-md-3">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role="form", @class="form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
            { 
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @Html.ValidationSummary(true, "Errors: ")
                </div>
            }

            
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeHolder = "User name" })
            @Html.ValidationMessageFor(m => m.UserName)
            

            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeHolder = "First name" })
            @Html.ValidationMessageFor(m => m.FirstName)
            
            @Html.TextBoxFor(mbox => mbox.LastName, new { @class = "form-control", placeHolder = "Last name" })
            @Html.ValidationMessageFor(m => m.LastName)
            
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeHolder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeHolder = "Confirm password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeHolder = "Email address" })
            @Html.ValidationMessageFor(m => m.EmailAddress)

            <div class="input-group">
                @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control", placeHolder = "Confirm email" })
                <span class="input-group-btn">
                    <input class="btn btn-primary" type="submit" value="Register" />
                </span>
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmEmail)
            

            @Html.SpamPreventionFields()
        }
    </div>
</div></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Html.SpamPreventionScript()
}
