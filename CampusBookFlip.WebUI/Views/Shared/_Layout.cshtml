<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Campus BookFlip</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/font-awesome")
        @Styles.Render("~/Content/social-buttons")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")

        <script type="text/javascript">
            function AddAntiForgeryToken(data) { try { data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').first().val(); } catch (e) { } return data; };
        </script>
    </head>
    <body>

        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">Campus BookFlip <small>buy it. read it. flip it.</small></a>
                
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse navHeaderCollapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (!Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Participating Colleges", "Index", "Colleges")</li>
                        
                            <li class="dropdown" id="nav-dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Social Media<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#"><i class="fa fa-twitter"></i> Twitter</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-facebook"></i> Facebook</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-google-plus"></i> Google+</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-youtube"></i> YouTube</a>
                                    </li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", title = "Register here as well" })</li>
                        } else {    
                            <li>
                                @Html.RouteLink(User.Identity.Name, new { action = "Manage", controller = "Account" }, htmlAttributes: new { @class = "username", title = "Manage Account" })
                            </li>
                            if (Roles.IsUserInRole(CampusBookFlip.WebUI.Infrastructure.Constants.ADMIN))
                            {
                                <li>
                                    @Html.RouteLink("Admin", new { action = "Index", controller = "Admin" })
                                </li>
                            }
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
        <div id="bootstrap-wrap">
            <div class="container" id="featured-section">
                @RenderSection("featured", required: false)
            </div>
            <div class="container">
                @RenderBody()
            </div>
        </div>
        <div class="navbar navbar-default navbar-fixed-bottom">
            <div class="container">
                <div class="navbar-text">&copy; @DateTime.Now.Year - Campus BookFlip - @Html.RouteLink("About", new { controller = "Home", action = "About" }) - @Html.RouteLink("Contact", new { controller = "Home", action = "Contact" }) @if (Request.IsAuthenticated)
                                                                                                                                                                                                                                             { <span>- @Html.ActionLink("Participating Colleges", "Index", "Colleges")</span>} -  <a href="http://www.twitter.com/campusbookflip"><i class="fa fa-twitter"></i></a> - <a href="#"><i class="fa fa-facebook"></i></a> - <a href="#"><i class="fa fa-google-plus"></i></a> - <a href="http://www.youtube.com/campusbookflip"><i class="fa fa-youtube"></i></a></div>
            </div>
        </div>
            
        
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {@Html.AntiForgeryToken()}

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
