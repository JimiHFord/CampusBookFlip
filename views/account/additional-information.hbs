{{> FB_fix_url_redirect}}

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Additional Information</h1>
      <div class="signup-wall">
        <form class="form-signin" action="/account/additional-information" method="POST">
          <input type="text" name="username" class="form-control" placeholder="Username" required autofocus value="{{user.username}}" />
          <input type="text" name="firstName" class="form-control" placeholder="First Name" required value="{{user.firstName}}" />
          <input type="text" name="lastName" class="form-control" placeholder="Last Name" required value="{{user.lastName}}" />
          <input type="email" name="email" class="form-control" placeholder="Email" required value="{{user.email}}" />
          {{> selectState states}}
          {{> selectCity cities}}
          {{> selectCollege colleges}}
          <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
          <span class="clearfix"></span>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/javascripts/college-select.js"></script>
