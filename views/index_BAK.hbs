
<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Sign in to Campus BookFlip</h1>
				<div class="account-wall">
					<img src="/images/guest-user.png" class="profile-img" />
					<form class="form-signin" action="login" method="POST">
						<input type="text" name="username" class="form-control" placeholder="Email" required autofocus />
						<input type="password" name="password" class="form-control" placeholder="Password" required />
						<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
						<span class="clearfix"></span>
					</form>
				</div>
				<a href="/signup" class="text-center new-account">Create an account</a>
				{{#if message}}
					<h1 class="text-center error-message">{{message}}</h1>
				{{/if}}
		</div>
	</div>
</div>
